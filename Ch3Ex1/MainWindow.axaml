<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="InchesToCentimetersGUI.MainWindow"
        Title="InchesToCentimetersGUI"
        Width="400"
        Height="200">

  <StackPanel Margin="10">
    <TextBox Name="TextBox1" Watermark="Enter inches" />
    <Button Name="CalculateButton" Content="Calculate" Margin="0,10,0,0" Click="OnCalculateButtonClick"/>
    <TextBlock Name="ResultLabel" Text="Result will be displayed here" Margin="0,10,0,0"/>
               
   </StackPanel>
</Window>
