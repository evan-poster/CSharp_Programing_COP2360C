<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="MoveEstimatorGUI.MainWindow"
        Title="MoveEstimatorGUI"
        Width="400"
        Height="200">

  <StackPanel Margin="10">
    <TextBox Name="hoursTextBox" Watermark="Enter hours" />
    <TextBox Name="milesTextBox" Watermark="Enter miles" Margin="0,10,0,0" />
    <Button Name="CalculateButton" Content="Calculate" Margin="0,10,0,0" Click="OnCalculateButtonClick"/>
    <TextBlock Name="ResultLabel" Text="" Margin="0,10,0,0"/>
               
   </StackPanel>
</Window>
